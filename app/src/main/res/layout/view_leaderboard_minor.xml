<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.pivotal.racquetandroid.view.DividerTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/minor_leagues" />

    <TextView
        android:id="@+id/minor_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_width"
        android:text="@string/minor_description"
        android:textColor="@color/grey_text" />

    <LinearLayout
        android:id="@+id/minor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_width"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/club"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>